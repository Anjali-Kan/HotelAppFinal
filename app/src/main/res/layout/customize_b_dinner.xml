<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customize_b_dinner"
    android:background="@drawable/back_ground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Base for British Dinner"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/baseselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/base"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/noodles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Burnt Lamb"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/steamedrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Brown Gravy"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/sauce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baseselect"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Sauce"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/sauceselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sauce"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Brown Sauce"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/gtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Branston Pickle"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/schez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Mint Sauce"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/hcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Marie Rose Sauce"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sauceselect"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Protein"
                android:textSize="30sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/proteinselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/protein"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Meat 'n Two Veg"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/paneer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Kale Serve"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Rice Pasta"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Cabbage Fry"
                    android:textSize="20sp" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/vegecheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/proteinselect"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Vegetables"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkonion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Onion"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkcarrot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Carrot"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkbabycorn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Baby Corn"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkfrenchbeans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="French Beans"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkspringonion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Spring Onion"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkbeansprouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Bean Sprouts"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkmushroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Mushroom"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checksoupbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vegecheck"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Soup"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <CheckBox
                    android:id="@+id/checksoup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Add Soup"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checksoup"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Order"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>